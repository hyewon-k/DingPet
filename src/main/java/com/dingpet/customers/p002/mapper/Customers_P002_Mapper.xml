<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dingpet.customers.p002.mapper.Customers_P002_Mapper">

	<!-- id찾기 -->
	<select id="lostId" resultType="com.dingpet.customers.p002.vo.Customers_P002_VO">
		select member_id from member where member_email = #{member_email}
	</select>
	
	<!-- pw찾기 -->
	<select id="lostPwd" resultType="com.dingpet.customers.p002.vo.Customers_P002_VO">
		select member_pwd from member where member_id = #{member_id} and member_email = #{member_email}
	</select>

</mapper>